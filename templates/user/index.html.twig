{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-lg font-medium leading-6 text-gray-900 mb-3 text-center pt-5">Profil utilisateur</h1>
<div class="overflow-hidden shadow sm:rounded-lg mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-6">
    <div class="w-52 h-52 rounded mx-auto d-block overflow-hidden border-2 dark:border-white border-gray-900">
        <h3><img src="{{ asset('uploads/images/' ~ app.user.userAvatar) }}" alt="Photo de bien" class="w-full h-full object-cover"></h3>
    </div>
    <div class="grid grid-rows-1 grid-flow-col gap-3 justify-items-center">
        <div>
            <h3 class="text-lg font-medium leading-6 text-gray-900">Pr√©nom</h3>
            <h3 class="font-bold">{{ app.user.userFirstname }}</h3>
        </div>
        <div>
            <h3 class="font-medium">Nom</h3>
            <h3 class="font-bold">{{ app.user.userLastname }}</h3>
        </div>
        <div>
            <h3 class="font-medium">Email</h3>
            <h3 class="font-bold">{{ app.user.email }}</h3>
        </div>
    </div>
    <div class="flex flex-row gap-2 mt-5">
        <a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="inline-block rounded-md border border-transparent py-2 px-4 text-base font-medium text-white hover:bg-opacity-75" style="background-color: #fb4e17;align-self: center;">Modifier</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>

</div>

{% endblock %}
